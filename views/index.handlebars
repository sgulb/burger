<h1>Eat-Da-Burger</h1>

<ul>
	{{#each burger}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">Devour Burger</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<ul>
	{{#each burger}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>
		{{/if}}
	{{/each}}
</ul>

<h2>Add A Burger</h2>

<form action="/burgers" method="POST">
	<input type="text" name="burger_name" placeholder="Your Burger Here">
	<button type="submit">Add Your Burger</button>
</form>

